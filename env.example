# Required: Telegram Bot Token from @BotFather
BOT_TOKEN=your_bot_token_here

# Optional: FFmpeg path (auto-detected on Railway)
FFMPEG_PATH=/usr/bin/ffmpeg

# Optional: Max file size in bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# Optional: Temporary directory
TEMP_DIR=./temp

# Optional: Log level
LOG_LEVEL=info

# Optional: Admin user IDs (comma separated)
ADMIN_IDS=123456789,987654321

# Optional: Webhook domain (if using webhooks)
WEBHOOK_DOMAIN=https://your-app.railway.app